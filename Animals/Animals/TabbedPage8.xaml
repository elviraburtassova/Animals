<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animals.TabbedPage8"
             Title="Белки">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#80C57A">

            <Label Text="О белках"
         VerticalOptions="Center"
         HorizontalOptions="Center"
         FontSize="Large"
         FontAttributes="Bold"
         TextColor="#1A7F27"
         BackgroundColor="#DC8E1E"/>
            <Label Text="Бе́лки — род грызунов семейства беличьих. Кроме собственно рода, белками называют ещё целый ряд представителей семейства беличьих из родов красные белки, пальмовые белки и многих других. Что касается собственно рода, то он объединяет в себя около 30 видов, распространённых в Европе, Северной и Южной Америке и в умеренном поясе Азии."
                   BackgroundColor="#E4A058"
                   FontSize="Medium"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>