<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animals.TabbedPage11"
             Title="Горностаи">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#D48998">

            <Label Text="О горностаях"
         VerticalOptions="Center"
         HorizontalOptions="Center"
         FontSize="Large"
         FontAttributes="Bold"
         TextColor="#9B4530"
         BackgroundColor="White"/>
            <Label Text="Горноста́й — хищное млекопитающее семейства куньих."
                   BackgroundColor="#D44567"
                   FontSize="Medium"/>
            <Button x:Name="Description"
                    Clicked="Description_Clicked"
                 Text="Описание:"
                    BackgroundColor="#FFFFFF"
                    TextColor="#750707"/>
            <Image Source="gr.jpg"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>